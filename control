import sys,os
import pyaudio
import wave
import pocketsphinx as ps
import sphinxbase

#~ hmdir =
dictd = '6751.dic'
lmd = '6751.lm'
 
def decodeSpeech(lmdir,dictp,wavfile):
	speechRec = ps.Decoder(lm = lmdir, dict = dictp)
	speechRec.decode_raw(wavfile)
	result = speechRec.get_hyp()
	return result[0]
 
CHUNK = 1024
FORMAT = pyaudio.paInt16
CHANNELS = 1
RATE = 16000
RECORD_SECONDS = 4
 
 
fn = "/tmp/control.wav";
p = pyaudio.PyAudio()
stream = p.open(format=FORMAT, channels=CHANNELS, rate=RATE, input=True, frames_per_buffer=CHUNK)

wf = wave.open(fn, 'wb')
wf.setnchannels(CHANNELS)
wf.setsampwidth(p.get_sample_size(FORMAT))
wf.setframerate(RATE)

wavFile = file(fn,'rb')
wwf = 0
while True:

	print("* recording")
	frames = []
	for i in range(0, int(RATE / CHUNK * RECORD_SECONDS)):
		data = stream.read(CHUNK)
		frames.append(data)
	print("* done recording")

	wf.writeframes(b''.join(frames))
	
	if frames != wwf:
		recognised = decodeSpeech(lmd,dictd,wavFile)
		wwf = frames

	if recognised == 'TURN ON WEB' or recognised == 'ON WEB':
		cm = "iceweasel"
		print "on web"
		os.system(cm)
		
	if recognised == 'TURN ON FILER' or recognised == 'ON FILER':
		cm = "nautilus"
		print "on nautilus"
		os.system(cm)
		
	if recognised == 'OFF':
		print "off"
		os.system("exit")
	print recognised


wf.close()
